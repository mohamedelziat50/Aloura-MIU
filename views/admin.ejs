    <div class="reviews-container">
        <!-- Review 1 -->
        <div class="review-card">
            <div class="review-header">
                <span class="review-author">John D.</span>
                <span class="review-rating">★★★★☆</span>
                <span class="review-date">2023-10-15</span>
            </div>
            <div class="review-content">
                <p>Great product! Works exactly as described. The delivery was a bit slow but worth the wait.</p>
            </div>
            <div class="review-actions">
                <button class="btn-approve">Approve</button>
                <button class="btn-delete">Delete</button>
            </div>
        </div>

        <!-- Review 2 -->
        <div class="review-card">
            <div class="review-header">
                <span class="review-author">Sarah M.</span>
                <span class="review-rating">★☆☆☆☆</span>
