                    </div>
                    <div class="user-actions">
                        <button class="user-btn edit">Edit</button>
                        <button class="user-btn delete">Delete</button>
                    </div>
                </div>
        
                <!-- User Card 2 -->
                <div class="user-card">
                    <div class="user-avatar">
                        <img src="https://via.placeholder.com/80" alt="User Avatar">
                    </div>
                    <div class="user-info">
                        <h3 class="user-name">Sarah Smith</h3>
                        <p class="user-email">sarah.smith@example.com</p>
                        <p class="user-role">Admin</p>
                        <p class="user-joined">Joined: 22 Mar 2022</p>
                    </div>
                    <div class="user-actions">
