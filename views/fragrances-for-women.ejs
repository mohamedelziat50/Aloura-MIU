          />
        </a>

        <!-- Title -->
        <h2 class="card-title">Scandal</h2>

        <!-- Type -->
        <p class="card-type">Eau de Parfum</p>

        <!-- Mood -->
        <p class="card-mood">Floral, Musky, Woody</p>

        <!-- Price + ml container -->
        <div class="card-price">
          <span class="price">300 €</span>
          <span class="ml">100ml ▼</span>
          <!-- Added arrow here -->

          <!-- Dropdown Menu -->
          <div class="dropdown-menu">
            <div class="dropdown-option" data-price="270 €" data-ml="75ml">
              <span class="dropdown-price">300 €</span>
              <span class="dropdown-ml">100ml</span>
            </div>
            <div class="dropdown-option" data-price="200 €" data-ml="50ml">
              <span class="dropdown-price">200 €</span>
