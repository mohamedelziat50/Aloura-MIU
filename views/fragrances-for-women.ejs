        <!-- Separator -->
        <hr class="card-separator" />

        <!-- Add to Cart Button -->
        <button
          class="card-button"
          data-bs-toggle="offcanvas"
          data-bs-target="#offcanvasRight"
          aria-controls="offcanvasRight"
        >
          Add to Cart
        </button>
      </div>
      <!-- End of scandal container -->

      <!-- 4. burbery her container -->
      <div
        class="card"
        id="burberry-her"
        data-scrolly-top="moveFromTop, duration:1.3s, delay:0.15s"
        data-scrolly-down="moveFromBottom, duration:1.3s, delay:0.15s"
      >
        <!-- Label -->
        <div class="card-label">Enchant</div>
        <!-- Image Container -->
        <a href="/fragrances-page" target="_blank" class="card-image-container">
          <img
            class="card-image"
            src="../img/perfumes-transparent/burberry-her.png"
            alt="stronger-with-you Picture"
          />
        </a>

        <!-- Title -->
        <h2 class="card-title">Burberry her</h2>

        <!-- Type -->
        <p class="card-type">Eau de Parfum</p>

        <!-- Mood -->
        <p class="card-mood">Floral, Musky, Woody</p>

        <!-- Price + ml container -->
        <div class="card-price">
          <span class="price">270 €</span>
          <span class="ml">75ml ▼</span>
          <!-- Added arrow here -->

          <!-- Dropdown Menu -->
          <div class="dropdown-menu">
            <div class="dropdown-option" data-price="270 €" data-ml="75ml">
              <span class="dropdown-price">270 €</span>
              <span class="dropdown-ml">75ml</span>
            </div>
            <div class="dropdown-option" data-price="200 €" data-ml="50ml">
              <span class="dropdown-price">200 €</span>
              <span class="dropdown-ml">50ml</span>
            </div>
            <div class="dropdown-option" data-price="150 €" data-ml="30ml">
              <span class="dropdown-price">150 €</span>
              <span class="dropdown-ml">30ml</span>
            </div>
          </div>
        </div>

        <!-- Separator -->
        <hr class="card-separator" />

        <!-- Add to Cart Button -->
        <button
          class="card-button"
          type="button"
          data-bs-toggle="offcanvas"
          data-bs-target="#offcanvasRight"
          aria-controls="offcanvasRight"
        >
          Add To Cart
        </button>
      </div>
      <!-- End of Stronger with you container -->
    </div>
    <!-- END OF BIG CARDS CONTAINER -->

    <!-- Linking js at end of body to wait for everything to load! -->
    <script src="../js/all-fragrances.js"></script>

    <!-- Scrolly activation code for it to work -->
    <script type="text/javascript" src="../js/scrolly.js"></script>
    <script>
      window.onload = function () {
        scrolly();
      };
    </script>
  </body>
</html>
