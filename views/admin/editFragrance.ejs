    <script type="module">
      import showFunToast from "/js/toast.js";
      
      // ✅ Image preview & removal (Global functions)
      function previewImage(event, previewId) {
        const file = event.target.files[0];
        const reader = new FileReader();
        reader.onload = () => {
          const preview = document.getElementById(previewId);
          preview.src = reader.result;
        };
        if (file) reader.readAsDataURL(file);
      }
      window.previewImage = previewImage;
    
      document.addEventListener("DOMContentLoaded", function () {
        const form = document.getElementById("fragranceForm");
        
        // Function to get selected size options values
        function getSizeOptionsValues() {
          const sizes = ['30', '50', '100'];
          return sizes.map(size => ({
            size: size,
            price: document.querySelector(`select[name="price${size}"]`).value,
            quantity: document.querySelector(`#quantity${size}`).value,
            checked: document.getElementById(`size${size}`).checked,
          }));
        }
    
        // Define originalValues to hold the initial values of the form
        const originalValues = {
          name: document.getElementById("fragranceName").value,
          brand: document.getElementById("fragranceBrand").value,
          gender: document.getElementById("fragranceGender").value,
          category: document.getElementById("fragranceCategory").value,
          topNotes: document.getElementById("fragranceTopNotes").value,
          middleNotes: document.getElementById("fragranceMidNotes").value,
          baseNotes: document.getElementById("fragranceBaseNotes").value,
          description: document.getElementById("fragranceDescription").value,
          sizeOptions: getSizeOptionsValues(),
          releaseDate: document.getElementById("releaseDate").value,
          tags: document.getElementById("tags").value,
          image: document.getElementById("fragrancePicture").src, // Save the initial image URL in originalValues
          backgroundImage1: document.getElementById("backgroundPicture1").src, // Save the initial image URL in originalValues
          backgroundImage2: document.getElementById("backgroundPicture2").src, // Save the initial image URL in originalValues
        };
    
        form.addEventListener("submit", async (e) => {
          e.preventDefault();
    
          // Get all the current values from the form fields
          const name = document.getElementById("fragranceName").value;
          const brand = document.getElementById("fragranceBrand").value;
          const gender = document.getElementById("fragranceGender").value;
          const category = document.getElementById("fragranceCategory").value;
          const topNotes = document.getElementById("fragranceTopNotes").value;
          const middleNotes = document.getElementById("fragranceMidNotes").value;
          const baseNotes = document.getElementById("fragranceBaseNotes").value;
          const description = document.getElementById("fragranceDescription").value;
          const sizeOptions = getSizeOptionsValues();
          const releaseDate = document.getElementById("releaseDate").value;
          const tags = document.getElementById("tags").value;
          const image = document.getElementById("fragrancePicture").src;
          const backgroundImage1 = document.getElementById("backgroundPicture1").src;
          const backgroundImage2 = document.getElementById("backgroundPicture2").src;
          
    
          let hasChanged = false;
    
          // Check if any form values have changed
          if (
            originalValues.name !== name ||
            originalValues.brand !== brand ||
            originalValues.gender !== gender ||
            originalValues.category !== category ||
            originalValues.topNotes !== topNotes ||
            originalValues.middleNotes !== middleNotes ||
            originalValues.baseNotes !== baseNotes ||
            originalValues.description !== description ||
            originalValues.releaseDate !== releaseDate ||
            originalValues.tags !== tags ||
            originalValues.image !== image ||
            originalValues.backgroundImage1 !== backgroundImage1 ||
            originalValues.backgroundImage2 !== backgroundImage2
          ) {
            hasChanged = true;
          }
    
          // Check if the selected size options have changed
          sizeOptions.forEach(option => {
            const originalSizeOption = originalValues.sizeOptions.find(o => o.size === option.size);
            if (
              originalSizeOption.price !== option.price ||
              originalSizeOption.quantity !== option.quantity ||
              originalSizeOption.checked !== option.checked
            ) {
              hasChanged = true;
            }
          });
    
          // If no changes, show toast and stop submission
          if (!hasChanged) {
            showFunToast("ℹ️ No changes detected.", "red");
            return;
          }

           // ✅ Validate required text fields
        if (!name)
          return showFunToast("⚠️ Please enter the fragrance name.", "red");
        if (!brand)
          return showFunToast("⚠️ Please enter the fragrance brand.", "red");
        if (!gender) return showFunToast("⚠️ Please select a gender.", "red");
        if (!category)
          return showFunToast("⚠️ Please select a category.", "red");
        if (!topNotes) return showFunToast("⚠️ Please enter top notes.", "red");
        if (!middleNotes)
          return showFunToast("⚠️ Please enter middle notes.", "red");
        if (!baseNotes)
          return showFunToast("⚠️ Please enter base notes.", "red");
        if (!description)
          return showFunToast("⚠️ Please enter a description.", "red");

        // ✅ Validate size checkbox
        const checkedSizes = form.querySelectorAll(
          "input[name='sizes']:checked"
        );
        if (checkedSizes.length === 0) {
          return showFunToast(
            "⚠️ Please select at least one size option.",
            "red"
          );
        }

        // ✅ Validate quantity fields for selected sizes
        const missingQuantities = [];
        const invalidQuantities = [];

        for (const checkbox of checkedSizes) {
          const size = checkbox.value; // "30", "50", "100"
          const quantityInput = document.getElementById(`quantity${size}`);

          if (!quantityInput || quantityInput.value.trim() === "") {
            missingQuantities.push(`${size}ml`);
          } else {
            const quantity = parseInt(quantityInput.value.trim(), 10);
            if (isNaN(quantity) || quantity < 0) {
              invalidQuantities.push(`${size}ml`);
            }
          }
        }

        if (missingQuantities.length > 0) {
          return showFunToast(
            `⚠️ Please enter quantity for: ${missingQuantities.join(", ")}`,
            "red"
          );
        }


        if (!releaseDate)
          return showFunToast("⚠️ Please enter a release date.", "red");
        if (!tags) return showFunToast("⚠️ Please enter tags.", "red");
    
          // Create FormData and append the new values
          const formData = new FormData(form);
          sizeOptions.forEach(option => {
            if (option.checked) {
              formData.append("sizes[]", option.size);
              formData.append(`price${option.size}`, option.price);
              formData.append(`quantity${option.size}`, option.quantity);
            }
          });

           // Ensure you are appending the files in the correct order
          formData.append("image", image); // Append fragrancePicture first
          formData.append("backgroundImage1", backgroundImage1); // Append backgroundPicture1 second
          formData.append("backgroundImage2", backgroundImage2); // Append backgroundPicture2 third
    
    
          const id = form.querySelector("button[type='submit']").getAttribute("fragranceid");
    
          // Submit the form data
          try {
            const response = await fetch(`/api/fragrances/${id}`, {
              method: "PUT",
              body: formData,
            });
    
            const data = await response.json();
    
            if (response.ok) {
              setTimeout(() => {
                showFunToast(data.message || "✅ Fragrance updated successfully!", "green");
                window.location.href = `/admin/${window.currentAdminId}`; // Redirect after successful update
              }, 900);
            } else {
              showFunToast(data.message || "❌ Error occurred while updating fragrance!", "red");
            }
          } catch (err) {
            console.error(err);
            showFunToast("❌ Error occurred!", "red");
          }
        });
      });
    </script>
    
    <script>
      window.currentAdminId = "<%= user._id %>";
    </script>
  </body>
