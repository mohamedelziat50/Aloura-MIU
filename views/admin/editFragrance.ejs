    <!-- Add Font Awesome -->
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css"
    />
    <style>
      /* Base styles */
      body {
        background-color: whitesmoke;
        color: #000000;
        font-family: "Arial", sans-serif;
        opacity: 0;
        animation: fadeIn 0.5s ease-in forwards;
        padding: 2rem;
      }

      @keyframes fadeIn {
        from {
          opacity: 0;
        }
        to {
          opacity: 1;
        }
      }

      /* Form container */
      .form-container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 0;
      }

      /* Typography */
      .title-container {
        text-align: center;
        margin-bottom: 2.5rem;

        position: relative;
      }

      h2 {
        font-size: 2.5rem;
        font-weight: 700;
        color: #121212;
        display: inline-block;
        margin-left: 20px;
        position: relative;
        cursor: pointer;
      }

      h2::after {
        content: "";
        position: absolute;
        width: 0;
        height: 2px;
        bottom: -5px;
        left: 0;
        background-color: #121212;
        transition: width 0.3s ease;
      }

      h2:hover::after {
        width: 100%;
      }

      .form-label {
        font-weight: 500;
        color: #121212;
        margin-bottom: 0.5rem;
        font-size: 1.1rem;
      }

      /* Form controls */
      .form-control,
      .form-select {
        background-color: #ffffff;
        color: #121212;
        border: 1px solid #e0e0e0;
        border-radius: 8px;
        padding: 0.75rem 1rem;
        transition: all 0.3s ease;
      }

      .form-control:focus,
      .form-select:focus {
        border-color: #121212;
        box-shadow: 0 0 0 0.2rem rgba(18, 18, 18, 0.15);
        outline: none;
      }

      /* Checkbox container */
      .checkbox-container {
        display: flex;
        flex-direction: column;
        gap: 1.2rem;
      }

      .checkbox-item {
        display: flex;
        align-items: center;
        gap: 1rem;
        width: 100%;
        padding: 0.5rem;
        border-radius: 8px;
        transition: background-color 0.3s ease;
      }

      .checkbox-item:hover {
        background-color: rgba(0, 0, 0, 0.02);
      }

      /* Image upload section */
      .image-upload-container {
        display: flex;
        gap: 1.5rem;
        justify-content: space-between;
        margin-bottom: 1.5rem;
      }

      .image-preview-container {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 0.5rem;
      }

      .image-preview-wrapper {
        position: relative;
        cursor: pointer;
        width: 200px;
        height: 200px;
        border: 2px solid #e0e0e0;
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        background-color: #f8f8f8;
      }

      .image-preview {
        width: 100%;
        height: 100%;
        object-fit: cover;
        border-radius: 10px;
        transition: all 0.3s ease;
      }

      .image-preview-wrapper:hover {
        border-color: #121212;
      }

      .image-preview-wrapper::after {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        background-color: rgba(0, 0, 0, 0.7);
        color: white;
        padding: 0.5rem 1rem;
        border-radius: 4px;
        opacity: 0;
        transition: opacity 0.3s ease;
      }

      .image-preview-wrapper:hover::after {
        opacity: 1;
      }

      .button-group {
        display: flex;
        gap: 0.5rem;
        justify-content: center;
        width: 100%;
        max-width: 200px;
      }

      /* Submit button */
      .submit-button-container {
        text-align: start;
        margin-top: 2rem;
      }

      .ButtonDicoration {
        color: white !important;
        background-color: #121212 !important;
        border: 1px solid #121212 !important;
        padding: 0.5rem 1rem;
        border-radius: 8px;
        font-weight: 500;
        transition: all 0.3s ease;
        flex: 1;
      }
      .ButtonDicoration:hover {
        color: #121212 !important;
        background-color: white !important;
      }

      .btn-outline-danger {
        border-radius: 8px;
        padding: 0.5rem !important;
        width: 35px;
        height: 35px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 0.9rem;
        transition: all 0.3s ease;
      }

      .form-section-last {
        margin-top: 2rem;
        padding-bottom: 1rem;
        border-bottom: 1px solid #e0e0e0;
        text-align: center;
        
      }

      .btn-outline-danger:hover {
        background-color: #dc3545;
        color: white;
      }

      /* Form sections */
      .form-section {
        margin-bottom: 2rem;
        padding: 1rem;
        border-bottom: 1px solid #e0e0e0;
      }

      .form-section:last-child {
        border-bottom: none;
      }

      /* Grid layout */
      .form-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 1.5rem;
      }

      .form-grid-last {
        display: inline-grid;
        grid-template-columns: repeat(auto-fit, minmax(500px, 1fr));
        gap: 1.5rem;
      }

      .form-grid-2 {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 1.5rem;
      }

      .form-grid-3 {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 1.5rem;
      }

      .form-full-width {
        grid-column: 1 / -1;
      }

      /* Responsive adjustments */
      @media (max-width: 768px) {
        body {
          padding: 1rem;
        }

        .image-upload-container {
          flex-direction: column;
          align-items: center;
        }

        .button-group {
          flex-direction: column;
          width: 100%;
        }

        .ButtonDicoration,
        .btn-outline-danger {
          width: 100%;
        }

        .form-grid,
        .form-grid-2,
        .form-grid-3 {
          grid-template-columns: 1fr;
        }
      }

      /* Animation classes */
      .fade-in {
        animation: fadeIn 0.5s ease-in;
      }
    </style>
