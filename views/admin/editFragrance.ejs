            </div>
          </div>
          
          

          <div class="form-section">
            <div class="form-grid">
              <div class="mb-4">
                <label class="form-label">Release Date</label>
                <input
                type="date"
                id="releaseDate"
                name="releaseDate"
                class="form-control"
                value="<%= fragrance.releaseDate ? fragrance.releaseDate.toISOString().split('T')[0] : '' %>"
              />
              </div>
            </div>
          
            <!-- Tags -->
            <div class="form-grid">
              <div class="mb-4">
                <label class="form-label">Tags (comma-separated)</label>
                <input
                  type="text"
                  placeholder="Brand Tags"
                  id="tags"
                  name="tags"
                  class="form-control"
                  value="<%= fragrance.tags.join(', ') %>"
                />
              </div>
            </div>
          </div>

          <div class="submit-button-container">
            <button type="submit" class="btn btn-primary ButtonDicoration">
              Edit Fragrance
            </button>
          </div>
          </div>
        </form>
      </div>
    </div>

    <script type="module">
      import showFunToast from "/js/toast.js";

      // âœ… Image preview & removal
      function previewImage(event, previewId) {
        const file = event.target.files[0];
        const reader = new FileReader();
        reader.onload = () => {
          const preview = document.getElementById(previewId);
          preview.src = reader.result;
        };
        if (file) reader.readAsDataURL(file);
      }

      function removeImage(previewId, inputId) {
        const preview = document.getElementById(previewId);
        const input = document.getElementById(inputId);
        preview.src = "";
        input.value = "";
      }

      window.previewImage = previewImage;
      window.removeImage = removeImage;






























      
    </script>
  </body>
</html>
