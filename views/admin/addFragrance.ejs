<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Add Fragrance</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link
      rel="icon"
      type="image/x-icon"
      href="/img/favicons/rounded-background-favicon.ico"
    />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/toastify-js/src/toastify.min.css"
    />
    <script src="https://cdn.jsdelivr.net/npm/toastify-js"></script>
    <style>
      /* Base styles */
      body {
        background-color: whitesmoke;
        color: #000000;
        font-family: "Arial", sans-serif;
        opacity: 0;
        animation: fadeIn 0.5s ease-in forwards;
        padding: 2rem;
      }

      @keyframes fadeIn {
        from {
          opacity: 0;
        }
        to {
          opacity: 1;
        }
      }

      /* Form container */
      .form-container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 0;
      }

      /* Typography */
      .title-container {
        text-align: center;
        margin-bottom: 2.5rem;

        position: relative;
      }

      h2 {
        font-size: 2.5rem;
        font-weight: 700;
        color: #121212;
        display: inline-block;
        margin-left: 20px;
        position: relative;
        cursor: pointer;
      }

      h2::after {
        content: "";
        position: absolute;
        width: 0;
        height: 2px;
        bottom: -5px;
        left: 0;
        background-color: #121212;
        transition: width 0.3s ease;
      }

      h2:hover::after {
        width: 100%;
      }

      .form-label {
        font-weight: 500;
        color: #121212;
        margin-bottom: 0.5rem;
        font-size: 1.1rem;
      }

      /* Form controls */
      .form-control,
      .form-select {
        background-color: #ffffff;
        color: #121212;
        border: 1px solid #e0e0e0;
        border-radius: 8px;
        padding: 0.75rem 1rem;
        transition: all 0.3s ease;
      }

      .form-control:focus,
      .form-select:focus {
        border-color: #121212;
        box-shadow: 0 0 0 0.2rem rgba(18, 18, 18, 0.15);
        outline: none;
      }

      /* Checkbox container */
      .checkbox-container {
        display: flex;
        flex-direction: column;
        gap: 1.2rem;
      }

      .checkbox-item {
        display: flex;
        align-items: center;
        gap: 1rem;
        width: 100%;
        padding: 0.5rem;
        border-radius: 8px;
        transition: background-color 0.3s ease;
      }

      .checkbox-item:hover {
        background-color: rgba(0, 0, 0, 0.02);
      }

      /* Image upload section */
      .image-upload-container {
        display: flex;
        gap: 1.5rem;
        justify-content: space-between;
        margin-bottom: 1.5rem;
      }

      .image-preview-container {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 0.5rem;
      }

      .image-preview-wrapper {
        position: relative;
        cursor: pointer;
        width: 200px;
        height: 200px;
        border: 2px solid #e0e0e0;
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        background-color: #f8f8f8;
      }

      .image-preview {
        width: 100%;
        height: 100%;
        object-fit: cover;
        border-radius: 10px;
        transition: all 0.3s ease;
      }

      .image-preview-wrapper:hover {
        border-color: #121212;
      }

      .image-preview-wrapper::after {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        background-color: rgba(0, 0, 0, 0.7);
        color: white;
        padding: 0.5rem 1rem;
        border-radius: 4px;
        opacity: 0;
        transition: opacity 0.3s ease;
      }

      .image-preview-wrapper:hover::after {
        opacity: 1;
      }

      .button-group {
        display: flex;
        gap: 0.5rem;
        justify-content: center;
        width: 100%;
        max-width: 200px;
      }

      /* Submit button */
      .submit-button-container {
        text-align: start;
        margin-top: 2rem;
      }

      .ButtonDicoration {
        color: white !important;
        background-color: #121212 !important;
        border: 1px solid #121212 !important;
        padding: 0.5rem 1rem;
        border-radius: 8px;
        font-weight: 500;
        transition: all 0.3s ease;
        flex: 1;
      }

      .ButtonDicoration:hover {
        color: #121212 !important;
        background-color: white !important;
      }


      .btn-outline-danger {
        border-radius: 8px;
        padding: 0.5rem !important;
        width: 35px;
        height: 35px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 0.9rem;
        transition: all 0.3s ease;
      }

      .btn-outline-danger:hover {
        background-color: #dc3545;
        color: white;
      }

      /* Form sections */
      .form-section {
        margin-bottom: 2rem;
        padding: 1rem;
        border-bottom: 1px solid #e0e0e0;
      }

      .form-section:last-child {
        border-bottom: none;
      }

      /* Grid layout */
      .form-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 1.5rem;
      }

      .form-grid-2 {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 1.5rem;
      }

      .form-grid-3 {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 1.5rem;
      }

      .form-full-width {
        grid-column: 1 / -1;
      }

      /* Responsive adjustments */
      @media (max-width: 768px) {
        body {
          padding: 1rem;
        }

        .image-upload-container {
          flex-direction: column;
          align-items: center;
        }

        .button-group {
          flex-direction: column;
          width: 100%;
        }

        .ButtonDicoration,
        .btn-outline-danger {
          width: 100%;
        }

        .form-grid,
        .form-grid-2,
        .form-grid-3 {
          grid-template-columns: 1fr;
        }
      }

      /* Animation classes */
      .fade-in {
        animation: fadeIn 0.5s ease-in;
      }
    </style>
  </head>
  <body>
    <div class="container fade-in">
      <div class="form-container">
        <h2 class="mb-4">Add New Fragrance</h2>
        <form 
          enctype="multipart/form-data"
          class="scale-hover"
        >
          <div class="form-section">
            <div class="form-grid">
              <div class="mb-4">
                <label class="form-label">Name</label>
                <input
                  type="text"
                  name="name"
                  placeholder="Fragrance Name"
                  class="form-control"
                  id="fragranceName"
                />
              </div>
              <div class="mb-4">
                <label class="form-label">Brand</label>
                <input
                  type="text"
                  name="brand"
                  placeholder="Fragrance Brand"
                  class="form-control"
                  id="fragranceBrand"
                />
              </div>
            </div>
            <div class="form-grid-2">
              <div class="mb-4">
                <label class="form-label">Gender</label>
                <select
                  name="gender"
                  id="fragranceGender"
                  class="form-select"
                  required
                >
                  <option value="Male">Male</option>
                  <option value="Female">Female</option>
                  <option value="Unisex">Unisex</option>
                </select>
              </div>
              <div class="mb-4">
                <label class="form-label">Category</label>
                <select
                  name="category"
                  id="fragranceCategory"
                  class="form-select"
                >
                  <option value="Eau de Parfum">Eau de Parfum</option>
                  <option value="Eau de Toilette">Eau de Toilette</option>
                  <option value="Cologne">Cologne</option>
                  <option value="Body Mist">Body Mist</option>
                </select>
              </div>
            </div>
          </div>

          <div class="form-section">
            <div class="form-grid-3">
              <div class="mb-4">
                <label class="form-label">Top Notes (comma-separated)</label>
                <input
                  placeholder="e.g., Lemon, Lavender, Bergamot"
                  type="text"
                  id="fragranceTopNotes"
                  name="topNotes"
                  class="form-control"
                />
              </div>
              <div class="mb-4">
                <label class="form-label">Middle Notes (comma-separated)</label>
                <input
                  type="text"
                  name="middleNotes"
                  placeholder="e.g., Rose, Jasmine, Cinnamon"
                  id="fragranceMidNotes"
                  class="form-control"
                />
              </div>
              <div class="mb-4">
                <label class="form-label">Base Notes (comma-separated)</label>
                <input
                  type="text"
                  name="baseNotes"
                  placeholder="e.g., Sandalwood, Vanilla, Musk"
                  id="fragranceBaseNotes"
                  class="form-control"
                />
              </div>
            </div>
            <div class="mb-4 form-full-width">
              <label class="form-label">Description</label>
              <textarea
                name="description"
                class="form-control"
                rows="3"
                placeholder="Fragrance Description...."
                id="fragranceDescription"
              ></textarea>
            </div>
          </div>

          <div class="form-section">
            <div class="form-grid-3">
              <div class="checkbox-item">
                <input
                  class="form-check-input"
                  type="checkbox"
                  name="sizes"
                  value="30"
                  id="size30"
                />
                <label class="form-check-label" for="size30">30ml</label>
                <select name="price30" class="form-select" required>
                  <option value="900">900 EGP</option>
                  <option value="1200">1200 EGP</option>
                </select>
                <input
                  type="number"
                  name="quantity30"
                  class="form-control"
                  placeholder="Quantity"
                  id="quantity30"
                />
              </div>
              <div class="checkbox-item">
                <input
                  class="form-check-input"
                  type="checkbox"
                  name="sizes"
                  value="50"
                  id="size50"
                />
                <label class="form-check-label" for="size50">50ml</label>
                <select name="price50" class="form-select" required>
                  <option value="1200">900 EGP</option>
                  <option value="1200">1200 EGP</option>
                  <option value="1500">1500 EGP</option>
                </select>
                <input
                  type="number"
                  name="quantity50"
                  class="form-control"
                  placeholder="Quantity"
                  id="quantity50"
                />
              </div>
              <div class="checkbox-item">
                <input
                  class="form-check-input"
                  type="checkbox"
                  name="sizes"
                  value="100"
                  id="size100"
                />
                <label class="form-check-label" for="size100">100ml</label>
                <select
                  name="price100"
                  class="form-select"
                  id="price100"
                  required
                >
                  <option value="1200">900 EGP</option>
                  <option value="1200">1200 EGP</option>
                  <option value="1500">1500 EGP</option>
                </select>
                <input
                  type="number"
                  name="quantity100"
                  class="form-control"
                  placeholder="Quantity"
                  id="quantity100"
                />
              </div>
            </div>
          </div>

          <div class="form-section">
            <div class="form-grid-3">
              <!-- Image 1 -->
              <div class="image-preview-container">
                <p class="form-label">Fragrance picture</p>
                <div
                  class="image-preview-wrapper"
                  onclick="document.getElementById('fragrancePictureInput').click()"
                >
                  <img
                    id="fragrancePicture"
                    src="/img/perfumes-transparent/sauvauge-dior.png"
                    alt="Fragrance Preview"
                    class="image-preview"
                  />
                </div>
                <div class="button-group">
                  <input
                    type="file"
                    class="d-none"
                    id="fragrancePictureInput"
                    name="images"
                    accept="image/*"
                    onchange="previewImage(event, 'fragrancePicture')"
                  />
                  <button
                    type="button"
                    class="btn btn-outline-primary ButtonDicoration"
                    onclick="document.getElementById('fragrancePictureInput').click()"
                  >
                    Upload
                  </button>
                  <button
                    type="button"
                    class="btn btn-outline-danger"
                    onclick="removeImage('fragrancePicture', 'fragrancePictureInput')"
                  >
                    X
                  </button>
                </div>
              </div>

              <!-- Image 2 -->
              <div class="image-preview-container">
                <p class="form-label">Background 1</p>
                <div
                  class="image-preview-wrapper"
                  onclick="document.getElementById('backgroundPicture1Input').click()"
                >
                  <img
                    id="backgroundPicture1"
                    src="/img/ALOURA.jpg"
                    alt="background-color 1"
                    class="image-preview"
                  />
                </div>
                <div class="button-group">
                  <input
                    type="file"
                    class="d-none"
                    id="backgroundPicture1Input"
                    name="images"
                    accept="image/*"
                    onchange="previewImage(event, 'backgroundPicture1')"
                  />
                  <button
                    type="button"
                    class="btn btn-outline-primary ButtonDicoration"
                    onclick="document.getElementById('backgroundPicture1Input').click()"
                  >
                    Upload
                  </button>
                  <button
                    type="button"
                    class="btn btn-outline-danger"
                    onclick="removeImage('backgroundPicture1', 'backgroundPicture1Input')"
                  >
                    X
                  </button>
                </div>
              </div>

              <!-- Image 3 -->
              <div class="image-preview-container">
                <p class="form-label">Background 2</p>
                <div
                  class="image-preview-wrapper"
                  onclick="document.getElementById('backgroundPicture2Input').click()"
                >
                  <img
                    id="backgroundPicture2"
                    src="/img/ALOURA.jpg"
                    alt="background-color 2"
                    class="image-preview"
                  />
                </div>
                <div class="button-group">
                  <input
                    type="file"
                    class="d-none"
                    id="backgroundPicture2Input"
                    name="images"
                    accept="image/*"
                    onchange="previewImage(event, 'backgroundPicture2')"
                  />
                  <button
                    type="button"
                    class="btn btn-outline-primary ButtonDicoration"
                    onclick="document.getElementById('backgroundPicture2Input').click()"
                  >
                    Upload
                  </button>
                  <button
                    type="button"
                    class="btn btn-outline-danger"
                    onclick="removeImage('backgroundPicture2', 'backgroundPicture2Input')"
                  >
                    X
                  </button>
                </div>
              </div>
            </div>
          </div>

          <div class="form-section">
            <div class="form-grid">
              <div class="mb-4">
                <label class="form-label">Release Date</label>
                <input
                  type="date"
                  id="releaseDate"
                  name="releaseDate"
                  class="form-control"
                />
              </div>
            </div>
            <div class="form-grid">
              <div class="mb-4">
                <label class="form-label">Tags (comma-separated)</label>
                <input
                  type="text"
                  placeholder="Brand Tags"
                  id="tags"
                  name="tags"
                  class="form-control"
                />
              </div>
            </div>
          </div>

          <div class="submit-button-container">
            <button type="submit" class="btn btn-primary ButtonDicoration">
              Add Fragrance
            </button>
          </div>
        </form>
      </div>
    </div>

    <script type="module">
      import showFunToast from "/js/toast.js";

      // ✅ Image preview & removal
      function previewImage(event, previewId) {
        const file = event.target.files[0];
        const reader = new FileReader();
        reader.onload = () => {
          const preview = document.getElementById(previewId);
          preview.src = reader.result;
        };
        if (file) reader.readAsDataURL(file);
      }

      function removeImage(previewId, inputId) {
        const preview = document.getElementById(previewId);
        const input = document.getElementById(inputId);
        preview.src = "";
        input.value = "";
      }

      window.previewImage = previewImage;
      window.removeImage = removeImage;

      // ✅ Form logic
      const form = document.querySelector("form");

      form.addEventListener("submit", async (e) => {
        e.preventDefault();
        const formData = new FormData(form);

        // ✅ Get fields
        const name = document.getElementById("fragranceName").value.trim();
        const brand = document.getElementById("fragranceBrand").value.trim();
        const gender = document.getElementById("fragranceGender").value.trim();
        const category = document
          .getElementById("fragranceCategory")
          .value.trim();
        const topNotes = document
          .getElementById("fragranceTopNotes")
          .value.trim();
        const midNotes = document
          .getElementById("fragranceMidNotes")
          .value.trim();
        const baseNotes = document
          .getElementById("fragranceBaseNotes")
          .value.trim();
        const description = document
          .getElementById("fragranceDescription")
          .value.trim();
        const releaseDate = document.getElementById("releaseDate").value.trim();
        const tags = document.getElementById("tags").value.trim();

        // ✅ Validate required text fields
        if (!name)
          return showFunToast("⚠️ Please enter the fragrance name.", "red");
        if (!brand)
          return showFunToast("⚠️ Please enter the fragrance brand.", "red");
        if (!gender) return showFunToast("⚠️ Please select a gender.", "red");
        if (!category)
          return showFunToast("⚠️ Please select a category.", "red");
        if (!topNotes) return showFunToast("⚠️ Please enter top notes.", "red");
        if (!midNotes)
          return showFunToast("⚠️ Please enter middle notes.", "red");
        if (!baseNotes)
          return showFunToast("⚠️ Please enter base notes.", "red");
        if (!description)
          return showFunToast("⚠️ Please enter a description.", "red");

        // ✅ Validate size checkbox
        const checkedSizes = form.querySelectorAll(
          "input[name='sizes']:checked"
        );
        if (checkedSizes.length === 0) {
          return showFunToast(
            "⚠️ Please select at least one size option.",
            "red"
          );
        }

        // ✅ Validate quantity fields for selected sizes
        const missingQuantities = [];
        const invalidQuantities = [];

        for (const checkbox of checkedSizes) {
          const size = checkbox.value; // "30", "50", "100"
          const quantityInput = document.getElementById(`quantity${size}`);

          if (!quantityInput || quantityInput.value.trim() === "") {
            missingQuantities.push(`${size}ml`);
          } else {
            const quantity = parseInt(quantityInput.value.trim(), 10);
            if (isNaN(quantity) || quantity < 0) {
              invalidQuantities.push(`${size}ml`);
            }
          }
        }

        if (missingQuantities.length > 0) {
          return showFunToast(
            `⚠️ Please enter quantity for: ${missingQuantities.join(", ")}`,
            "red"
          );
        }

        // ✅ Validate images
        const imageInputs = [
          "fragrancePictureInput",
          "backgroundPicture1Input",
          "backgroundPicture2Input",
        ];
        for (const inputId of imageInputs) {
          const input = document.getElementById(inputId);
          if (!input.files || input.files.length === 0) {
            return showFunToast("⚠️ Please upload all three images.", "red");
          }
        }

        if (!releaseDate)
          return showFunToast("⚠️ Please enter a release date.", "red");
        if (!tags) return showFunToast("⚠️ Please enter tags.", "red");

        // ✅ Append sizes
        checkedSizes.forEach((checkbox) => {
          formData.append("sizes", checkbox.value);
        });

        // ✅ Submit
        try {
          const response = await fetch("/api/fragrances", {
            method: "POST",
            body: formData,
          });

          const result = await response.json();

          if (response.ok) {
            showFunToast("✅ Fragrance added successfully!", "green");
            setTimeout(() => {
              window.location.href = "/admin/:id";
            }, 900);
            form.reset();
            [
              "fragrancePicture",
              "backgroundPicture1",
              "backgroundPicture2",
            ].forEach((id) => {
              const img = document.getElementById(id);
              if (img) img.src = "";
            });
          } else {
            showFunToast(
              `❌ ${result.error || "Something went wrong."}`,
              "red"
            );
          }
        } catch (error) {
          console.error("Fetch error:", error);
          showFunToast(
            "❌ Request failed. Please check your connection.",
            "red"
          );
        }
      });
    </script>
  </body>
</html>
