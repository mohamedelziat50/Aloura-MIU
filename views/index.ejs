<!DOCTYPE html>
<html lang="en">
  <head>
    <!-- META DATA -->
    <!-- Define type of characters used in our website -->
    <meta charset="UTF-8" />
    <!-- Keywords for search engine:  useful when publishing -->
    <meta name="keywords" content="Perfumes, Fragrances, Aloura" />
    <!--  Different devices with different resolutions-->
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!-- Description displayed in search engine -->
    <meta
      name="description"
      content="Aloura: Unlock the Power of Scent. Discover high-quality fragrances at catchy prices. Your perfect fragrance journey starts here."
    />
    <title>Aloura</title>
    <!-- END OF META DATA -->

    <!-- Tab Logo / 'Favicon' -->
    <link
      rel="icon"
      type="image/x-icon"
      href="./img/favicons/rounded-background-favicon.ico"
    />

    <!-- Font Awesome (Linking FootAwesome Website to our Code) -->
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css"
      integrity="sha512-Evv84Mr4kqVGRNSgIGL/F/aIDqQb7xQ2vcrdIwxfjThSH8CSR7PBEakCr51Ck+w+/U6swU2Im1vVX0SVk9ABhg=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    />

    <!-- Bootstrap CSS (Linking it to our Code) -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <!-- CSS Links (Connecting the CSS file to this file) -->
    <link rel="stylesheet" href="./css/style.css" />
    <link rel="stylesheet" href="./css/navBar.css" />
    <link rel="stylesheet" href="./css/page-loader.css" />
    <link rel="stylesheet" href="./css/chatbot.css" />
    <!-- Page loader related -->

    <!-- JS Links (Connecting the JS file to this file) -->
    <script src="./js/script.js"></script>
    <script src="./js/page-loader.js"></script>
    <script src="./js/chatbot.js"></script>
    <!-- Page Loader related -->

    <!-- FLUID EFFECT RELATED -->
    <script src="/js/fluidEffect/jquery.min.js"></script>
    <script src="/js/fluidEffect/fluid.min.js"></script>

    <!-- Translate related -->
    <script>
      window.gtranslateSettings = {
        default_language: "en",
        native_language_names: false,
        detect_browser_language: true,
        languages: ["en", "ar", "es", "fr", "de"],
        wrapper_selector: ".gtranslate_wrapper",
      };
    </script>
    <script
      src="https://cdn.gtranslate.net/widgets/latest/dropdown.js"
      defer
    ></script>

    <!-- Intial Scroll When Reloading -->
    <script>
      // Prevent the browser from restoring the scroll position
      if (history.scrollRestoration) {
        history.scrollRestoration = "manual";
      }
      // Scroll to the top of the page on load
      window.onload = function () {
        window.scrollTo(0, 0);
      };
    </script>
  </head>

  <body>
    <!-- Pre-loader at the top of body -->
    <div class="fullpage-loader">
      <!-- Full-screen overlay container -->
      <div class="loader-content">
        <!-- Centers content vertically/horizontally -->
        <div class="logo-reveal">
          <!-- Container for logo animation -->
          <img src="./img/logo.png" alt="Logo" />
          <!-- Logo -->
        </div>
        <!-- Loading bar is trapped into a container so it can fill it entirely! -->
        <div class="loading-bar-container">
          <!-- Background track for progress bar -->
          <div class="loading-bar"></div>
          <!-- Animated progress bar -->
        </div>
      </div>
    </div>

    <!-- Navbar -->
    <%- include('partials/navbar.ejs') %>

    <!-- Menu Overlay -->
    <div class="menu-overlay"></div>

    <!-- For Him & For Her Segment -->
    <div class="gender">
      <!--Intialize Container (taking gender CSS container)-->
      <div class="text-overlay-indulge">INDULGE</div>
      <div class="text-overlay-your">YOUR SENSES</div>

      <div class="female">
        <!-- Canvas for Fluid Effect -->
        <canvas id="female-fluid-canvas"></canvas>
        <!--Intialize Container (taking female CSS container)-->
        <img
          id="female-img"
          src="./img/girlTestCopy.jpg"
          alt="For Her Fragrances"
        />
        <div class="text-overlay">
          <!-- Increases z-index -->
          <button
            style="z-index: 9999999"
            onclick="window.location.href='fragrances-for-women'"
          >
            For Her
          </button>
          <!-- Creating Button with CSS text-overlay properties-->
        </div>
      </div>

      <div class="male">
        <!-- Canvas for Fluid Effect -->
        <canvas id="male-fluid-canvas"></canvas>
        <img
          id="male-img"
          src="./img/guyTestCopy.png"
          alt="For Him Fragrances"
        />
        <div class="text-overlay">
          <button
            style="z-index: 9999999"
            onclick="window.location.href='fragrances-for-men'"
          >
            For Him
          </button>
        </div>
      </div>

      <!-- Add center journey text -->
      <div class="fragrance-quiz-container">
        <div class="fragrance-quiz">
          <a href="fragrance-quiz">Fragrance Quiz</a>
        </div>
      </div>

      <div class="transition-container">
        <img id="transition-img" src="" alt="Transition Image" />
      </div>
    </div>

    <!-- After the gender container -->
    <div class="quality-model-section">
      <div class="quality-assurance">
        <h2>Quality Assurance</h2>
        <p>
          At Aloura, we are committed to excellence in every fragrance we
          create. Each bottle represents our dedication to quality and
          craftsmanship.
        </p>
        <p>
          Our perfumes undergo rigorous testing to ensure they meet the highest
          standards. From ingredient selection to final packaging, every step in
          our process is carefully monitored by our team of expert perfumers.
        </p>
        <p>
          We source only the finest natural and synthetic ingredients from
          trusted suppliers around the world. Our commitment to sustainability
          means we prioritize environmentally responsible practices throughout
          our production process.
        </p>
        <p>
          When you choose Aloura, you're not just buying a fragrance â€“ you're
          experiencing the culmination of artistry, science, and passion.
        </p>
        <a href="/our-story" class="learn-more-btn">Learn More</a>

        
      </div>

      <div class="model-container">
        <h3>Experience Our Craft</h3>
        <div id="model-viewer"></div>
        <p class="interaction-hint">Click and drag to rotate</p>
      </div>

      <!-- New Reviews Section -->
      <div class="reviews-section">
        <h3 class="reviews-title">Customer Reviews</h3>

        <div class="reviews-container" id="reviews-container">
          <!-- Review Card 1 -->
          <div class="review-card fading-in" data-index="0">
            <div class="review-card-stars">
              <i class="fa-solid fa-star"></i>
              <i class="fa-solid fa-star"></i>
              <i class="fa-solid fa-star"></i>
              <i class="fa-solid fa-star"></i>
              <i class="fa-solid fa-star"></i>
            </div>
            <div class="review-card-text">
              "Absolutely stunning fragrance that lasted all day. The quality
              is evident from the first spray - complex, sophisticated, and
              truly unique."
            </div>
            <div class="review-card-footer">
              <div class="review-card-avatar">
                <img
                  src="https://randomuser.me/api/portraits/women/44.jpg"
                  alt="Sarah Johnson"
                />
              </div>
              <div class="review-card-info">
                <p class="review-card-name">Sarah Johnson</p>
                <p class="review-card-location">New York, USA</p>
              </div>
            </div>
          </div>

          <!-- Review Card 2 -->
          <div class="review-card fading-in" data-index="1">
            <div class="review-card-stars">
              <i class="fa-solid fa-star"></i>
              <i class="fa-solid fa-star"></i>
              <i class="fa-solid fa-star"></i>
              <i class="fa-solid fa-star"></i>
              <i class="fa-solid fa-star"></i>
            </div>
            <div class="review-card-text">
              "I've tried many luxury fragrances over the years, but Aloura
              stands out for its exceptional longevity and silage. Worth every
              penny!"
            </div>
            <div class="review-card-footer">
              <div class="review-card-avatar">
                <img
                  src="https://randomuser.me/api/portraits/men/32.jpg"
                  alt="Michael Reynolds"
                />
              </div>
              <div class="review-card-info">
                <p class="review-card-name">Michael Reynolds</p>
                <p class="review-card-location">London, UK</p>
              </div>
            </div>
          </div>

          <!-- Review Card 3 -->
          <div class="review-card fading-in" data-index="2">
            <div class="review-card-stars">
              <i class="fa-solid fa-star"></i>
              <i class="fa-solid fa-star"></i>
              <i class="fa-solid fa-star"></i>
              <i class="fa-solid fa-star"></i>
              <i class="fa-regular fa-star"></i>
            </div>
            <div class="review-card-text">
              "The attention to detail in these fragrances is remarkable. Each
              note unfolds beautifully throughout the day, receiving
              compliments wherever I go."
            </div>
            <div class="review-card-footer">
              <div class="review-card-avatar">
                <img
                  src="https://randomuser.me/api/portraits/women/63.jpg"
                  alt="Emma Chen"
                />
              </div>
              <div class="review-card-info">
                <p class="review-card-name">Emma Chen</p>
                <p class="review-card-location">Toronto, Canada</p>
              </div>
            </div>
          </div>
        </div>

        <div class="reviews-navigation">
          <span class="reviews-nav-dot active" data-index="0"></span>
          <span class="reviews-nav-dot" data-index="1"></span>
          <span class="reviews-nav-dot" data-index="2"></span>
          <span class="reviews-nav-dot" data-index="3"></span>
        </div>
      </div>
    </div>

    <!-- Product Slider Section -->
    <div class="product-slider-section">
      <h2 class="slider-title">SHOP YOUR FAVORITES</h2>
      <div class="product-slider-container">
        <!-- Previous Button -->
        <button class="slider-nav-btn prev-btn">
          <i class="fa-solid fa-chevron-left"></i>
        </button>

        <!-- Slider Wrapper -->
        <div class="product-slider-wrapper">
          <!-- Product Slider -->
          <div class="product-slider">
            <!-- Product Card 1 -->
            <div
              class="product-card"
              data-name="Tom Ford Tobacco Vanilla"
              data-description="A warm and luxurious blend of tobacco and vanilla"
              data-rating="4.7 (850)"
              data-size="3.4 oz, 100ml"
              data-price="$250.00"
            >
              <div class="product-img">
                <img
                  src="./img/perfumes-transparent/tom ford tobacco vanilla.png"
                  alt="Tom Ford Tobacco Vanilla"
                />
              </div>
            </div>

            <!-- Product Card 2 (Active by Default) -->
            <div
              class="product-card active"
              data-name="Spicebomb Extreme Eau de Parfum"
              data-description="An ardent and contrasted explosion of black pepper and saffron"
              data-rating="4.5 (719)"
              data-size="3.0 oz, 90ml"
              data-price="$145.00"
            >
              <div class="product-img">
                <img
                  src="./img/perfumes-transparent/spicebomb-extreme.png"
                  alt="SpiceBomb Extreme Eau de Parfum"
                />
              </div>
            </div>

            <!-- Product Card 3 -->
            <div
              class="product-card"
              data-name="Stronger With You Oud"
              data-description="A bold and intense fragrance with oud and spices"
              data-rating="4.6 (600)"
              data-size="3.0 oz, 90ml"
              data-price="$160.00"
            >
              <div class="product-img">
                <img
                  src="./img/perfumes-transparent/stronger with you oud.png"
                  alt="Stronger With You Oud"
                />
              </div>
            </div>

            <!-- Product Card 4 -->
            <div
              class="product-card"
              data-name="Versace Eros"
              data-description="A fresh and sensual fragrance with mint and vanilla"
              data-rating="4.4 (1200)"
              data-size="3.7 oz, 110ml"
              data-price="$120.00"
            >
              <div class="product-img">
                <img
                  src="./img/perfumes-transparent/versace-eros.png"
                  alt="Versace Eros"
                />
              </div>
            </div>

            <!-- Product Card 5 -->
            <div
              class="product-card"
              data-name="Valentino Born in Roma"
              data-description="A modern and vibrant fragrance with bergamot and jasmine"
              data-rating="4.3 (950)"
              data-size="3.0 oz, 90ml"
              data-price="$130.00"
            >
              <div class="product-img">
                <img
                  src="./img/perfumes-transparent/valentino-born-in-roma.png"
                  alt="Valentino Born in Roma"
                />
              </div>
            </div>

            <!-- Product Card 6 -->
            <div
              class="product-card"
              data-name="Bleu de Chanel"
              data-description="A timeless and sophisticated fragrance with woody notes"
              data-rating="4.8 (1500)"
              data-size="3.4 oz, 100ml"
              data-price="$150.00"
            >
              <div class="product-img">
                <img
                  src="./img/perfumes-transparent/bleu-de-chanel.png"
                  alt="Bleu de Chanel"
                />
              </div>
            </div>
          </div>
        </div>

        <!-- Next Button -->
        <button class="slider-nav-btn next-btn">
          <i class="fa-solid fa-chevron-right"></i>
        </button>
      </div>

      <!-- Product Details Container -->
      <div id="product-details" class="product-details">
        <h3 class="product-name">Spicebomb Extreme Eau de Parfum</h3>
        <p class="product-description">
          An ardent and contrasted explosion of black pepper and saffron
        </p>
        <div class="product-rating">
          <span class="stars">
            <i class="fa-solid fa-star"></i>
            <i class="fa-solid fa-star"></i>
            <i class="fa-solid fa-star"></i>
            <i class="fa-solid fa-star"></i>
            <i class="fa-solid fa-star-half-stroke"></i>
          </span>
          <span class="rating-score">4.5 (719)</span>
        </div>
        <div class="product-info">
          <span class="product-size">3.0 oz, 90ml</span>
          <span class="product-price">$145.00</span>
        </div>
        <button class="add-to-cart-btn">ADD TO CART</button>
      </div>
    </div>

    <!-- Before the closing body tag -->
    <script src="https://cdn.jsdelivr.net/npm/three@0.132.2/build/three.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/three@0.132.2/examples/js/loaders/GLTFLoader.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/three@0.132.2/examples/js/controls/OrbitControls.js"></script>
    <script src="./js/3dmodel.js"></script>

    <%- include('partials/modal.ejs') %>
    <br/>
    <%- include('partials/footer.ejs') %>

    <!-- Popup Overlay 
    <div class="popup-overlay">
      <div class="popup-container">
        <div class="popup-close">
          <i class="fa-solid fa-times"></i>
        </div>
        <img
          src="./img/ALOURA.jpg"
          alt="Special Offer"
          class="popup-image"
        />
        <button class="popup-btn">REDEEM NOW</button>
      </div>
    </div>
  -->

    <!-- FLUID - Female -->
    <!-- <script src="./js/fluidEffect/female-app.js"></script> -->
    <!-- FLUID - Male -->
    <!-- <script src="./js/fluidEffect/male-app.js"></script> -->

    <!-- Chatbot -->
    <div class="chatbot-container">
      <div class="chat-button">
        <i class="fa-solid fa-comment-dots"></i>
      </div>
      <div class="chat-interface">
        <div class="chat-header">
          <div class="header-content">
            <img src="./img/logo.png" alt="Aloura Logo" class="chat-logo" />
            <h3>Aloura Assistant</h3>
          </div>
          <button class="close-chat">
            <i class="fa-solid fa-times"></i>
          </button>
        </div>
        <div class="chat-messages"></div>
        <div class="chat-input">
          <input type="text" placeholder="Type your message..." />
          <button class="send-button">
            <i class="fa-solid fa-paper-plane"></i>
          </button>
        </div>
      </div>
    </div>
  </body>
</html>
