<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta
      name="description"
      content="Aloura: Premium fragrances at competitive prices. Discover Spicebomb Extreme and other luxury scents."
    />
    <title><%= fragrance.name %></title>

    <!-- Tab Logo / 'Favicon' -->
    <link
      rel="icon"
      type="image/x-icon"
      href="/img/favicons/rounded-background-favicon.ico"
    />

    <!-- Font Awesome (navbar, footer, modal, chatbot, cart all use it's icons SO MAKE SURE TO LINK IT) -->
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css"
      integrity="sha512-Evv84Mr4kqVGRNSgIGL/F/aIDqQb7xQ2vcrdIwxfjThSH8CSR7PBEakCr51Ck+w+/U6swU2Im1vVX0SVk9ABhg=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    />

    <!-- Bootstrap CSS & JS(navbar, footer, modal, cart all use it's functionality SO MAKE SURE TO LINK IT) -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <!-- CSS -->
    <link rel="stylesheet" href="/css/fragrances-page.css" />
    <link rel="stylesheet" href="/css/navbar.css" />
    <link rel="stylesheet" href="/css/footer.css" />
    <link rel="stylesheet" href="/css/chatbot.css" />
    <link rel="stylesheet" href="/css/page-loader.css" />
    <script src="/js/page-loader.js"></script>
    <script src="/js/chatbot.js"></script>
    <script src="/js/dark-mode.js"></script>
    <!-- Google fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:ital,opsz,wght@0,14..32,100..900;1,14..32,100..900&display=swap"
      rel="stylesheet"
    />

    <!-- Intial Scroll When Reloading-->
    <script>
      // Prevent the browser from restoring the scroll position
      if (history.scrollRestoration) {
        history.scrollRestoration = "manual";
      }
      // Scroll to the top of the page on load
      window.onload = function () {
        window.scrollTo(0, 0);
      };
    </script>
  </head>
  <body>
    <!-- Loader -->
    <%- include('partials/loader.ejs') %>

    <!-- Navbar -->
    <%- include('partials/navbar.ejs') %>

    <!-- Modal -->
    <%- include('partials/modal.ejs') %>

    <!-- Cart -->
    <%- include('partials/cart.ejs') %>

    <!-- Chatbot -->
    <%- include('partials/chatbot.ejs') %>

    <!-- Dark Mode -->
    <%- include('partials/dark-mode.ejs') %>

    <!-- Main Content -->
    <main>
      <div id="product-container">
        <!-- Image Gallery (structure unchanged) -->
        <div id="image-container">
          <div id="main-image-container">
            <img
              id="main-image"
              src="<%= fragrance.image[0] %>"
              alt="Spicebomb Extreme"
              class="card-image"
            />
          </div>

          <div id="subImages">
            <img src="<%= fragrance.image[1] %>" class="subimage" />
            <img src="<%= fragrance.image[2] %>" class="subimage" />
          </div>

          <!-- Lightbox (structure unchanged) -->
          <div id="lightbox" style="display: none">
            <span id="prev-arrow">&#9664;</span>
            <img id="lightbox-img" style="max-width: 90%; max-height: 90%" />
            <span id="next-arrow">&#9654;</span>
          </div>
        </div>

        <!-- Product Details (structure unchanged) -->
        <div id="product-details">
          <h2 id="perfumeName"><%= fragrance.name %></h2>
          <br />
          <h4 id="perfumeType" class="inter-custom">
            <%= fragrance.category %>
          </h4>
          <br />

          <!-- Size Selection -->
          <div class="size-selection">
            <% const size30 = fragrance.sizeOptions.find(o => o.size === 30); %>
            <% if (size30) { %>
            <input
              type="radio"
              name="size"
              id="radio30ml"
              value="30ml"
              data-price="<%= size30.price %>"
            />
            <label for="radio30ml" class="radio-label inter-custom">30ml</label>
            <% } else { %>
            <input type="radio" id="radio30ml" disabled />
            <label for="radio30ml" class="radio-label inter-custom text-muted"
              >30ml (Out of Stock)</label
            >
            <% } %> <% const size50 = fragrance.sizeOptions.find(o => o.size ===
            50); %> <% if (size50) { %>
            <input
              type="radio"
              name="size"
              id="radio50ml"
              value="50ml"
              data-price="<%= size50.price %>"
            />
            <label for="radio50ml" class="radio-label inter-custom">50ml</label>
            <% } else { %>
            <input type="radio" id="radio50ml" disabled />
            <label for="radio50ml" class="radio-label inter-custom text-muted"
              >50ml (Out of Stock)</label
            >
            <% } %> <% const size100 = fragrance.sizeOptions.find(o => o.size
            === 100); %> <% if (size100) { %>
            <input
              type="radio"
              name="size"
              id="radio100ml"
              value="100ml"
              data-price="<%= size100.price %>"
              checked
            />
            <label for="radio100ml" class="radio-label inter-custom"
              >100ml</label
            >
            <% } else { %>
            <input type="radio" id="radio100ml" disabled />
            <label for="radio100ml" class="radio-label inter-custom text-muted"
              >100ml (Out of Stock)</label
            >
            <% } %>
          </div>

          <h3 id="price" class="inter-custom"></h3>
          <br />

          <!-- Static Gender Slider - Developer Configurable (3 positions) -->
          <div class="gender-slider-container" data-gender-value="1">
            <div class="gender-slider-label">
              <span class="gender-icon-male"><i class="fas fa-mars"></i></span>
              <span class="gender-text">FOR</span>
            </div>

            <div
              class="modern-gender-slider"
              data-gender="<%= fragrance.gender %>"
            >
              <div class="slider-track"></div>
              <div class="slider-points">
                <div class="slider-point" data-value="1"></div>
                <div class="slider-point" data-value="2"></div>
                <div class="slider-point" data-value="3"></div>
              </div>
            </div>

            <div class="gender-slider-label">
              <span class="gender-text">FOR</span>
              <span class="gender-icon-female"
                ><i class="fas fa-venus"></i
              ></span>
            </div>
          </div>

          <button
            id="add-to-cart-button"
            data-bs-toggle="offcanvas"
            data-bs-target="#offcanvasRight"
            aria-controls="offcanvasRight"
            type="button"
            class="inter-custom"
          >
            Add to Cart
          </button>
          <br /><br /><br /><br />

          <div id="perks-container">
            <div class="perk-item">
              <img src="/img/delivery.webp" alt="Delivery" class="perk-icon" />
              <div class="perk-text">
                <h4>Fastest Delivery</h4>
                <p>Unmatched speed. Any address</p>
              </div>
            </div>

            <div class="perk-item">
              <img
                src="/img/best-quality.webp"
                alt="Samples"
                class="perk-icon"
              />
              <div class="perk-text">
                <h4>Best Quality</h4>
                <p>Better than what youâ€™ve bought before</p>
              </div>
            </div>
          </div>

          <div class="collapsible-section">
            <div class="collapsible-header inter-custom">
              <h2 id="description-title">Description</h2>
              <i class="fas fa-chevron-right collapsible-arrow active"></i>
            </div>
            <div class="collapsible-content active">
              <h3 id="description"><%= fragrance.description %></h3>
            </div>
          </div>

          <div class="collapsible-section">
            <div class="collapsible-header inter-custom">
              <h3 id="notes">Notes</h3>
              <i class="fas fa-chevron-right collapsible-arrow"></i>
            </div>
            <div class="collapsible-content">
              <ul>
                <li>
                  <strong class="note-subtitle">Top Notes</strong> <br /><%=
                  fragrance.topNotes %>
                </li>
                <li>
                  <strong class="note-subtitle">Middle Notes</strong> <br />
                  <%= fragrance.middleNotes %>
                </li>
                <li>
                  <strong class="note-subtitle">Base Notes</strong> <br />
                  <%= fragrance.baseNotes %>
                </li>
              </ul>
            </div>
          </div>
        </div>
      </div>

      <!-- Recommendations (structure unchanged) -->
      <div id="suggestions">
        <div id="might-like-box">
          <h2 id="might-like" class="inter-custom">You May Also Like</h2>
        </div>

        <div class="suggestion-wrapper">
          <button id="prev-suggestion" class="suggestion-arrow">&lt;</button>
          <div id="suggested-products-container">
            <div id="suggested-products">
              <% allFragrances.forEach(frag => { %>
              <div class="suggested-item">
                <img
                  src="<%= frag.image[0] %>"
                  alt="<%= frag.name %>"
                  class="suggested-image"
                />
                <p class="suggested-name"><%= frag.name %></p>
                <p class="suggested-price"><%= frag.sizeOptions[0].price %>LE</p>
                <button class="add-to-cart inter-custom">Add to Cart</button>
              </div>
              <% }) %>
            </div>
          </div>
          <button id="next-suggestion" class="suggestion-arrow">&gt;</button>
        </div>
      </div>

      <!-- Footer -->
      <%- include('partials/footer.ejs') %>
    </main>

    <!-- JavaScript -->
    <script src="/js/script.js"></script>
    <script src="/js/fragrances-page.js"></script>
  </body>
</html>
